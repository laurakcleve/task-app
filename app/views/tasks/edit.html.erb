<%= form_for(@task) do |f| %>
  <%= f.text_field :name, class: 'input-task' %>
  
  <%= link_to "Delete", task_path(@task), class: 'button button-delete', method: :delete, data: { confirm: "Are you sure?" } %>

  <br>

  <br>Tags<br>
  <%= f.text_field :tag_list, class: 'input-tags' %>

  <br>
  
  <%= link_to "Cancel", tasks_path, class: 'button button-cancel' %>
  <%= f.submit "Done", class: 'button button-done' %>
<% end %>