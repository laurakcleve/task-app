<h1>Tasks</h1>
<% @tasks.each do |task| %>
	<% if !task.complete? %>
		<%= link_to task_path(task) do %>
			<%= task.name %>
		<% end %>
		<%= link_to complete_task_path(task.id), method: :patch do %>
			<i class="fa fa-square-o"></i>
		<% end %>
		<br>
	<% end %>
<% end %>

<p><%= link_to "New", new_task_path %></p>
